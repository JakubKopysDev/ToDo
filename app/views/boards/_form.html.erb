<%= form_for board, url: action, method: (action_name.eql?('edit') ? 'PUT' : 'POST') do |f| %>

    <div class="form-group">
      <%= f.text_field :name, placeholder: 'Board Name', class: 'form-control' %>
      <%= f.error_message_for :name %>
    </div>

    <div class="form-group">
      <%= f.text_area :desc, placeholder: 'Description...', class: 'form-control', style: 'resize: none;' %>
      <%= f.error_message_for :desc %>
    </div>

    <div class="form-group">
      <%= f.submit 'Submit', class: 'btn btn-success pull-right' %>
    </div>
<% end %>